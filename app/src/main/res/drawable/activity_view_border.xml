<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/activity_view_border_color" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp"> <!--设置底部有边框-->
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:top="2dp"> <!--设置顶部部有边框-->
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:left="1dp"> <!--设置左部有边框-->
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:right="1dp"> <!--设置右部有边框-->
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>