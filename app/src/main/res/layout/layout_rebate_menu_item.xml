<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--广告轮播栏-->
    <com.shenrui.wukongrebate.view.CycleRotationView
        android:id="@+id/cyclerotationview"
        android:layout_width="match_parent"
        android:layout_height="160dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_super"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="超级返"
            android:drawableTop="@drawable/home_btn_superretun"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9.9包邮"
            android:drawableTop="@drawable/home_btn_jiukuai"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="值得买"
            android:drawableTop="@drawable/home_btn_zhidemai"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_duo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="夺宝"
            android:drawableTop="@drawable/home_btn_duobao"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="签到"
            android:drawableTop="@drawable/home_btn_sign"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mineGrey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F0F0F0">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_word_chaojifan"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mineGrey"/>
    <!--超级返,九块九，悟空夺宝，悟空团购-->
    <com.shenrui.wukongrebate.view.RebateItemView_
        android:id="@+id/layout_three_item"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mineGrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="每日上新"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"/>
</LinearLayout>