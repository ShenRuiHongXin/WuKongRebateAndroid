<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_db_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/nav_icon_back" />

        <TextView
            android:id="@+id/tv_db_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_db_search_back"
            android:text="分类浏览"
            android:textColor="@color/mainRed"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_db_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_db_search_back"
            android:background="@drawable/circle_view_db_cats_search"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_db_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/iv_db_search_delete"
                android:background="@null"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/nav_icon_search"
                android:hint=""
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_db_search_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:src="@drawable/mine_set_self_name_btn_delete" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mainGrey" />
    <LinearLayout
        android:id="@+id/ll_db_search_result_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_search_result_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/search_count"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_db_search_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="热门搜索"
            android:textColor="@color/search_hint_color" />

        <TextView
            android:id="@+id/tv_db_search_hot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_view_w_no_border"
            android:clickable="true"
            android:padding="5dp"
            android:text="手机" />
        <TextView
            android:id="@+id/tv_db_search_hot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_view_w_no_border"
            android:clickable="true"
            android:padding="5dp"
            android:text="ipad" />
        <TextView
            android:id="@+id/tv_db_search_hot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_view_w_no_border"
            android:clickable="true"
            android:padding="5dp"
            android:text="电脑" />
        <TextView
            android:id="@+id/tv_db_search_hot_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_view_w_no_border"
            android:clickable="true"
            android:padding="5dp"
            android:text="耳机" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/rl_search_history_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="搜索历史"/>
        <TextView
            android:id="@+id/tv_clear_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/red_edit"
            android:text="清空"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_db_search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>