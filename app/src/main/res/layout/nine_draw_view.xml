<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical">
    
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="32%w"
        app:layout_widthPercent="100%w"
        android:orientation="horizontal"
        app:layout_marginLeftPercent = "2%w"
        app:layout_marginRightPercent = "2%w"
        app:layout_marginTopPercent = "2%w">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="32%w"
        app:layout_widthPercent="100%w"
        android:orientation="horizontal"
        app:layout_marginLeftPercent = "2%w"
        app:layout_marginRightPercent = "2%w">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w"

            android:gravity="center_horizontal">
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/prize_shape"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w">
            <!--<ImageView-->
                <!--android:id="@+id/iv_prize_5"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--app:layout_marginPercent = "20%w"-->
                <!--android:background="@drawable/tmp_go"/>-->
                <TextView
                    android:id="@+id/tv_prize_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_marginPercent = "20%w"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="@color/f54949"
                    android:text="GO"/>

            <TextView
                android:id="@+id/tv_draw_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次消耗5积分"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                app:layout_marginBottomPercent = "2%w"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="32%w"
        app:layout_widthPercent="100%w"
        android:orientation="horizontal"
        app:layout_marginLeftPercent = "2%w"
        app:layout_marginRightPercent = "2%w">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/prl_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32%w"
            app:layout_widthPercent="32%w">
            <ImageView
                android:id="@+id/iv_prize_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent = "4%w"
                app:layout_marginLeftPercent = "4%w"
                app:layout_marginRightPercent = "4%w"
                app:layout_marginBottomPercent = "4%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>