<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.shenrui.wukongrebate.fragment.timelimit.TimeOneFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/mineGrey"
        android:id="@+id/layout_vp_group">
        <android.support.v4.view.ViewPager
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:id="@+id/vp_time_one_limit"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mineGrey"/>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_time_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="13sp"
                android:text="MAC/魅可口红正品3g MAC时尚显色唇膏CHILI小辣椒/SEE SHEER西柚"/>
            <ImageView
                android:id="@+id/iv_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_btn_addtoshopingcart"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tv_sign1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="13sp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/iv_add_cart"/>
            <TextView
                android:id="@+id/tv_time_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="198.00"
                android:textSize="13sp"
                android:layout_toEndOf="@id/tv_sign1"
                android:layout_alignBottom="@id/tv_sign1"/>
            <View
                android:layout_width="60dp"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_alignBottom="@id/tv_sign1"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sign2"
                android:text="￥"
                android:textSize="15sp"
                android:textColor="@color/mainRed"
                android:layout_above="@id/tv_sign1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time_price_new"
                android:text="158.00"
                android:textSize="15sp"
                android:textColor="@color/mainRed"
                android:layout_toEndOf="@id/tv_sign2"
                android:layout_alignBottom="@id/tv_sign2"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="start|center_vertical"
        android:text="猜你喜欢"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_time_limit_like"/>
</LinearLayout>
