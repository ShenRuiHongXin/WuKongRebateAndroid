<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mine_srl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mineRed">
            <ImageView
                android:id="@+id/iv_mine_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/home_icon_set"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/iv_mine_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_mine_set"
                android:padding="8dp"
                android:src="@drawable/home_icon_news"
                android:contentDescription="@null"/>
            <com.shenrui.wukongrebate.view.CircleImageView
                android:id="@+id/iv_mine_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:border_color="#00000000"
                app:border_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/home_img_user"/>
            <TextView
                android:id="@+id/tv_mine_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_toEndOf="@id/iv_mine_avatar"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_mine_avatar"
                android:gravity="center"
                android:text="可用返利(元)"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_money_fanli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="51.60"
                android:textSize="25sp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_see"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_money_fanli"
                android:gravity="end"
                android:layout_marginEnd="15dp"
                android:text="查看"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/nav_icon_right"
                android:drawablePadding="10dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/mineRed">

            <TextView
                android:id="@+id/tv_all_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/lucency_white"
                android:text="全部订单"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/white"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />
            <RelativeLayout
                android:id="@+id/rl_yue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@color/lucency_white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="余额(元)"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/tv_money_yue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_yue"
                        android:text="233"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/mineGrey">
            <TextView
                android:id="@+id/tv_yuanbao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="元宝"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_icon_one"
                android:drawableEnd="@drawable/list_icon_back"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/tv_huiyuantong"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="会员通"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_icon_two"
                android:drawableEnd="@drawable/list_icon_back"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <TextView
                android:id="@+id/tv_youhuiquan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="优惠券"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_icon_three"
                android:drawableEnd="@drawable/list_icon_back"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/tv_yaoqingyoujiang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="邀请有奖"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_icon_four"
                android:drawableEnd="@drawable/list_icon_back"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="客服"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_icon_five"
                android:drawableEnd="@drawable/list_icon_back"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/tv_qita"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="其它"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_icon_six"
                android:drawableEnd="@drawable/list_icon_back"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
