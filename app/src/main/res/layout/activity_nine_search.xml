<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_nine_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mineGrey"
    tools:context="com.shenrui.wukongrebate.activity.NineSearchActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_top"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_nine_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/common_btn_back_n"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_nine_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:background="@drawable/radius_edit"
            android:drawableStart="@drawable/common_search_n"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:hint="搜索商品"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_nine_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="搜索"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#a0ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridView_search_recommend"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:numColumns="3" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridView_search_history"
            android:numColumns="1"
            android:scrollbarStyle="insideOverlay"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
