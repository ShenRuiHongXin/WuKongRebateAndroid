<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_line_bg"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/oversea_good_img6"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="商品名称商品名称商品名称"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_goods_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="简单介绍简单介绍"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvEye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6544"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/oversea_good_icon_eye"/>
        <TextView
            android:id="@+id/tvHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="336"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/oversea_good_icon_heart"/>
    </LinearLayout>
</LinearLayout>