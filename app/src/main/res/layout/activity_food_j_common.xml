<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_food_j_common_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/nav_icon_back" />

        <EditText
            android:id="@+id/et_food_j_common_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radius_edit"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/nav_icon_search"
            android:hint="蜜三刀"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_food_j_common_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="搜索"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mineGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/food_j_selecter_bg"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_condition_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="角色" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_condition_1"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/tv_condition_1"
                android:src="@drawable/nav_icon_trigle" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_mancount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/food_j_selecter_bg"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_condition_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="人数" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_condition_2"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/tv_condition_2"
                android:src="@drawable/nav_icon_trigle" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/food_j_selecter_bg"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_condition_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="筛选" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_condition_3"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/tv_condition_3"
                android:src="@drawable/nav_icon_trigle" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mineGrey"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/food_j_common_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_j_common_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
