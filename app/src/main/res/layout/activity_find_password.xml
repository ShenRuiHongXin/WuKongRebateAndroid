<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenrui.wukongrebate.activity.FindPasswordActivity">
    <include layout="@layout/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/et_find_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:hint="请输入手机号"
            android:background="@drawable/red_edit"/>
        <Button
            android:id="@+id/btn_find_getCode"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:background="@drawable/radius_green"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp">
        <EditText
            android:id="@+id/et_find_messageCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:hint="请输入短信验证码"
            android:background="@drawable/red_edit"/>
        <Button
            android:id="@+id/btn_find_check"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:text="验证"
            android:textColor="@color/white"
            android:background="@drawable/radius_green"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_find_type_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">
        <EditText
            android:id="@+id/et_find_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:paddingStart="10dp"
            android:hint="@string/password_format"
            android:inputType="textPassword"
            android:background="@drawable/red_edit"/>
        <EditText
            android:id="@+id/et_find_rePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:background="@drawable/red_edit"/>
        <Button
            android:id="@+id/btn_find_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/radius_title_red"/>
    </LinearLayout>
</LinearLayout>
