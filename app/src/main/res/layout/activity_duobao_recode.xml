<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_duo_recode_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_icon_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夺宝记录"
            android:textSize="18sp"
            android:textColor="@color/mainRed"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_duobao_recode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/f54949"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/f54949"
        app:tabTextColor="@color/textcolor_primary" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_db_recode_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>