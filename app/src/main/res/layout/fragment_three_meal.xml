<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_three_meal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.shenrui.wukongrebate.view.CycleRotationView
                android:id="@+id/crv_cookbook_three_meal"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_cookbook_three_meal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:tabBackground="@null"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/mainRed"
                app:tabTextAppearance="@style/food_text"
                app:tabTextColor="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:id="@+id/pb_three_meal_rv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cookbook_three_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/pb_three_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>