<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_shop_detail_shop_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/shop_detail_home_img" />

            <ImageView
                android:id="@+id/iv_shop_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/nav_icon_back_white" />

            <com.shenrui.wukongrebate.view.CircleImageView
                android:id="@+id/iv_shop_detail_shop_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_shop_detail_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="162dp"
                android:padding="5dp"
                android:src="@drawable/shop_detail_home_img_shop"
                app:border_color="@color/white"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/tv_shop_detail_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_shop_detail_shop_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="朱莉可可"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shop_detail_shop_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_detail_shop_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="西餐" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mineGrey" />

                <TextView
                    android:id="@+id/tv_shop_detail_shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硚口路" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mineGrey" />

                <TextView
                    android:id="@+id/tv_shop_detail_shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37.6km" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shop_detail_shop_fine_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/shop_detail_home_icon_phone"
                android:gravity="center_vertical"
                android:text="宜家荟聚购物中心四楼" />

            <View
                android:id="@+id/split_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_shop_detail_shop_fine_location"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:background="@color/mineGrey" />
            <TextView
                android:id="@+id/tv_shop_detail_shop_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/split_1"
                android:layout_centerHorizontal="true"
                android:text="推荐理由"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/shop_detail_home_icon_photoalbum"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_shop_detail_shop_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shop_detail_shop_r"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:text="欧洲大陆的上乘食材在铸铁锅里起舞\n清澈的前味 鲜美的中味与谐永的后味\n澳洲和牛菲力配香煎鹅肝 招牌之选"/>
            <TextView
                android:id="@+id/tv_shop_detail_shop_look_reason_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/nav_icon_back_right_red"
                android:drawablePadding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_shop_detail_shop_reason"
                android:textColor="@color/mainRed"
                android:text="查看详情"/>
            <View
                android:id="@+id/split_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_shop_detail_shop_look_reason_detail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:background="@color/mineGrey" />
            <TextView
                android:id="@+id/tv_shop_detail_shop_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/split_2"
                android:layout_centerHorizontal="true"
                android:text="商户话题"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/shop_detail_home_icon_shop"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_shop_detail_shop_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_shop_detail_shop_t"
                android:text="这么棒的美味和环境，快晒出来与大家分享吧，当然你的高颜值自拍一样不能错过!你的餐厅图文评价，可以帮助更多吃货找到人生挚爱哦!"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>