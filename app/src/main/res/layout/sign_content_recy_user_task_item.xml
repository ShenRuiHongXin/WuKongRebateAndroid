<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_sign_recy_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/index_sign_img1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_sign_recy_item"
        android:layout_toLeftOf="@+id/tv_sign_recy_to_compl">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_sign_recy_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="首页签到"
            android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_sign_line"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_sign_recy_item_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxx"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_recy_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="点击签到按钮，领取每日福利"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_sign_jiangli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/mainRed"
                android:text="奖励" />

            <TextView
                android:id="@+id/tv_sign_recy_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/circle_textview_bg"
                android:gravity="center"
                android:text="5"
                android:textSize="12sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/mainRed"
                android:text="积分" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sign_recy_to_compl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:text="去完成"
        android:textColor="@color/white"
        android:background="@drawable/radius_button_bg"
        android:layout_alignBottom="@+id/iv_sign_recy_item"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>