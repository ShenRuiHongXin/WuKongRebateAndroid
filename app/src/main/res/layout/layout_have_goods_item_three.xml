<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="9"
    android:background="@drawable/grey_line_bg"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_goods_name2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="商品名称商品名称"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_goods_info2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="简单介绍简单介绍"
            android:textSize="14sp"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEye2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6544"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/oversea_good_icon_eye"/>
            <TextView
                android:id="@+id/tvHeart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="336"
                android:layout_marginLeft="20dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/oversea_good_icon_heart"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_goods_img2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:src="@drawable/oversea_good_img7"/>
</LinearLayout>