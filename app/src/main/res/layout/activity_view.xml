<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/activity_view_border_color"
    android:padding="@dimen/activity_view_border">

    <LinearLayout
        android:id="@+id/activity_view_ll_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginRight="@dimen/activity_view_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动主题"
            android:textSize="@dimen/activity_view_title_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动简介内容"
            android:textSize="@dimen/activity_view_content_textsize" />

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/index_img_activity_n" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_view_ll_right_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/activity_view_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热销品牌"
                android:textSize="@dimen/activity_view_title_textsize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_right_top_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_img_activity1_n" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/activity_view_ll_right_normal_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="@dimen/activity_view_border"
                android:layout_weight="1">

                <TextView
                    android:text="标题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_view_title_textsize"
                    android:textStyle="bold"
                    android:id="@+id/tv_right_normal_title_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/index_img_activity2_n"
                    android:id="@+id/iv_right_normal_icon_1"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_alignTop="@+id/tv_right_normal_title_1"
                    android:layout_toRightOf="@+id/tv_right_normal_content_1"
                    android:layout_toEndOf="@+id/tv_right_normal_title_1" />

                <TextView
                    android:text="宣传内容"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_right_normal_title_1"
                    android:textSize="@dimen/activity_view_content_textsize"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_right_normal_content_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_view_ll_right_normal_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/white"
                android:layout_weight="1">

                <TextView
                    android:text="标题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_view_title_textsize"
                    android:textStyle="bold"
                    android:id="@+id/tv_right_normal_title_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/index_img_activity2_n"
                    android:id="@+id/iv_right_normal_icon_2"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_alignTop="@+id/tv_right_normal_title_2"
                    android:layout_toRightOf="@+id/tv_right_normal_content_2"
                    android:layout_toEndOf="@+id/tv_right_normal_title_2" />

                <TextView
                    android:text="宣传内容"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_right_normal_title_2"
                    android:textSize="@dimen/activity_view_content_textsize"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_right_normal_content_2" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>