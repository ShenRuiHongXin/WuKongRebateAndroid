<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_nine_scale_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenrui.wukongrebate.activity.NineScaleRankActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_nine_scale_rank_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/nav_icon_back"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_nine_search_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热销榜单"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_nine_scale_rank_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/common_btn_refresh_n"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/black">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_nine_scale_rank"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:tabSelectedTextColor="@color/mainRed"
            app:tabTextColor="@color/white"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabMaxWidth="80dp"
            app:tabMinWidth="50dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/mineGrey"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_nine_scale_rank_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_icon_backdown"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_nine_rank"
        android:background="@color/mineGrey"/>
</LinearLayout>
