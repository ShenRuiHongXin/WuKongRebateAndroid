<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/tv_activity_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/index_img_activity2_n"
        android:id="@+id/iv_activity_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/tv_activity_title"
        android:layout_toRightOf="@+id/tv_activity_content"
        android:layout_toEndOf="@+id/tv_activity_title" />

    <TextView
        android:text="宣传内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_title"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_activity_content" />
</RelativeLayout>