<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.shenrui.wukongrebate.view.CycleRotationView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/crv_food_fragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="菜谱"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/btn_caipu"
            android:drawablePadding="3dp"/>
        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/btn_shipin"
            android:drawablePadding="3dp"/>
        <TextView
            android:id="@+id/tv_btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="周刊"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/btn_zhoukan"
            android:drawablePadding="3dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mineGrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="精彩推送"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"/>
</LinearLayout>