<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="111dp"
    android:background="@color/f54949"
    android:padding="10dp"
    android:orientation="horizontal"
    android:id="@+id/ll_yb_layout">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#FADBE3"
        android:layout_weight="3">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_yuanbao_value"
        android:text="悟空专享"/>
    <TextView
        android:id="@+id/tv_yuanbao_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanbao"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="2元宝"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_yuanbao_value"
        android:text="购物抵现"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/xuxian"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_jf_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="1000"/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_jf_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="积分兑换"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>