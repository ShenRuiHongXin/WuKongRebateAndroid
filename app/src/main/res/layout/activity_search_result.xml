<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shenrui.wukongrebate.activity.NineSearchResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_search_result_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/nav_icon_back"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_search_result"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/radius_edit"
                android:drawableStart="@drawable/nav_icon_search"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="13sp"/>
        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/srl_search_result"
            android:background="@color/mineGrey">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_search_result_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="刷新中..."
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:visibility="gone"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_search_result" />
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_index_circle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/circle_grey"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_index_goods_current"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="99"
            android:textSize="10sp"
            android:paddingBottom="2dp"
            android:gravity="center_horizontal|bottom" />
        <View
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:background="@color/black"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_index_goods_total"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="6184"
            android:textSize="10sp"
            android:paddingTop="2dp"
            android:gravity="center_horizontal|top"/>
    </LinearLayout>
</RelativeLayout>
