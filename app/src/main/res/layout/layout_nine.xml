<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/mineGrey"
    android:padding="5dp"
    android:id="@+id/layout_nine_item">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_nine_picture"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/index_99_img1"/>
        <TextView
            android:id="@+id/tv_nine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥：9.9"
            android:textColor="@color/white"
            android:background="@color/mainRed"
            android:padding="3dp"
            android:layout_alignEnd="@+id/iv_nine_picture"
            android:layout_alignBottom="@+id/iv_nine_picture"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_nine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="粉色无袖雪纺收腰连衣裙"
        android:maxLines="2"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/tv_nine_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返xx%"
            android:textSize="12sp"
            android:textColor="@color/mainRed" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_nine_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已抢xx件"
            android:textSize="12sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <ImageView
            android:id="@+id/iv_nine_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_icon_tao" />
    </LinearLayout>
</LinearLayout>