<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.shenrui.wukongrebate.view.CycleRotationView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/nine_cycleRotationView"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:id="@+id/nine_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/index_nine_bg1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="畅销榜单"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#a0000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/index_nine_bg2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9.9品牌团"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#a0000000"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nine_rvContent"
        android:layout_margin="10dp"/>
</LinearLayout>